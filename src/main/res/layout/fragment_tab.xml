<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF570"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pickup_ly"
        android:gravity="left"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >
    <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:text="8.00 AM"
    android:textSize="@dimen/text_small"
    android:textColor="@color/bg_black"
    android:gravity="center"
        android:layout_marginRight="@dimen/margin_10"
    />
     <LinearLayout
         android:layout_width="25dp"
         android:layout_height="match_parent"
         android:orientation="vertical"
         >
         <ImageView
             android:layout_marginLeft="0dp"
             android:layout_marginTop="@dimen/margin_30"
             android:layout_gravity="left"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/house"
             />
        <View
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            />




     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:gravity="center_vertical"

         >

            <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="Pick Up"

                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_small" />
         <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Address"

    android:textSize="@dimen/text_small"
    android:textColor="@color/grey_1"
    />
     </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/busimg_1"
        android:layout_below="@id/pickup_ly"
        android:gravity="left"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_width="100dp"
            android:layout_height="match_parent"

            />
        <ImageView
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bus"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/busimg_1"
        android:id="@+id/school_ly"
        android:gravity="left"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="10.00 AM"
            android:textSize="@dimen/text_small"
            android:textColor="@color/bg_black"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_10"
            />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/blue"
                />
            <ImageView
                android:layout_marginLeft="0dp"

                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/house"
                />
            <View
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_black"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"

            >
            <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name"
                android:gravity="center"

                android:textSize="@dimen/text_small"
                android:textColor="@color/bg_black"
                />
            <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"

                android:textSize="@dimen/text_small"
                android:textColor="@color/grey_1"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/busimg"
        android:layout_below="@id/school_ly"
        android:gravity="left"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_width="100dp"
            android:layout_height="match_parent"

            />
        <ImageView
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bus"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/busimg"
        android:gravity="left"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="5:00 PM"
            android:textSize="@dimen/text_small"
            android:textColor="@color/bg_black"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_10"
            />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/bg_black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:src="@drawable/house" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"

            >

            <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="Drop"

                android:textColor="@color/bg_black"
                android:textSize="@dimen/text_small" />
            <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"

                android:textSize="@dimen/text_small"
                android:textColor="@color/grey_1"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>