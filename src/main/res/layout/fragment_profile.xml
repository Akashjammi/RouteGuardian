<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_yellowbg"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/white2"
        app:cardCornerRadius="45dp"
        android:layout_marginTop="-45dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <RelativeLayout

            android:background="@color/white2"
            android:id="@+id/title_bar"
            android:layout_marginTop="@dimen/margin_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >
            <LinearLayout

                android:id="@+id/back_img"
                android:layout_alignParentStart="true"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circle"
                android:layout_centerInParent="true"

                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="horizontal"
                >
                <ImageView
                    android:padding="@dimen/padding_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/left"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rounded_rectangle"

                >


                <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="Profile"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/bg_black"

                    />

            </LinearLayout>
        </RelativeLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:gravity="center"
             >
             <ImageView
                 android:layout_width="75dp"
                 android:layout_height="75dp"
                 android:src="@drawable/man"

                 />

         </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="@dimen/text_medium"
            />
        <com.jammi.akash.schoolbustracker.CustomViews.F1EditTextRegular
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terry"
            android:layout_marginHorizontal="@dimen/margin_30"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="@dimen/text_medium"
            />
        <com.jammi.akash.schoolbustracker.CustomViews.F1EditTextRegular
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terry"
            android:layout_marginHorizontal="@dimen/margin_30"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="@dimen/text_medium"
            />
        <com.jammi.akash.schoolbustracker.CustomViews.F1EditTextRegular
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8248370309"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginHorizontal="@dimen/margin_30"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="@dimen/text_medium"
            />
        <com.jammi.akash.schoolbustracker.CustomViews.F1EditTextRegular
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terry"
            android:inputType="textEmailAddress"
            android:layout_marginHorizontal="@dimen/margin_30"
            />

    </LinearLayout>

    <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="@color/bg_black"
        android:textSize="@dimen/text_medium"
        android:gravity="center"

        android:layout_marginTop="@dimen/margin_30"
        />

</LinearLayout>