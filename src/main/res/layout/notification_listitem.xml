<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"

    >

    <android.support.v7.widget.CardView
      app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        app:cardBackgroundColor="@color/noti_grey">

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                    android:id="@+id/noti_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:text="Pick Up Remainder"
                    android:textStyle="bold"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_medium" />

                <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular
                    android:layout_marginRight="@dimen/margin_20"
                    android:id="@+id/noti_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:text="7:50 Am"
                    android:textColor="@color/bg_black"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>

            <com.jammi.akash.schoolbustracker.CustomViews.F1TextViewRegular

                android:id="@+id/noti_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_15"
                android:gravity="center_vertical"
                android:text="SchoolBus is about to arrive at the pickup spot"
                android:textColor="#9A9999"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>